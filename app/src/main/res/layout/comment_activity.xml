<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >




    <TextView
        android:textColor="#9b9b9b"
        android:textSize="15.0sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="huan"
        android:id="@+id/tv_comAc_author"/>

    <TextView
        android:textColor="@color/black"
        android:textSize="18.0sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginLeft="3dp"
        android:text="JVM面试什么问题"
        android:id="@+id/tv_comAc_title"/>

    <TextView
        android:textColor="#9b9b9b"
        android:textSize="15.0sp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"

        android:text="毕业离开学校快两年了，许久没有上虎踞龙蟠，夜里爬上来看一看，冷清了不少，很多 当年熟悉的老id都不出现了，翻翻自己的在线时间排名居然还是老样子，唏嘘~ 毕业时的百感交集，两年来也慢慢沉淀下来，一切的一切，都过去了。 感谢恩师，感谢母校，在这里我"
        android:id="@+id/tv_comAc_content"/>

    <TextView
        android:textColor="#9b9b9b"
        android:textSize="15.0sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="2017-08-02 22:09"
        android:layout_marginRight="3dp"
        android:id="@+id/tv_comAc_date"/>


    <ImageView android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="@mipmap/traffic_lt_line_h"/>

    <!-- 写评论 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        >

        <Button
            android:id="@+id/but_addCom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/aliceblue"
            android:text="写评论"
            android:background="@drawable/selector_button_blue"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <ImageView android:layout_width="fill_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="1dp"
        android:src="@mipmap/traffic_lt_line_h"/>

    <ListView
        android:id="@+id/lv_comAC"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/white"
        android:dividerHeight="3dp"
        android:layout_marginTop="8dp"
        ></ListView>






</LinearLayout>